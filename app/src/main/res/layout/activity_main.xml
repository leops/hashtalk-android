<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:gravity="center">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/messageList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/no_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_found"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="6dp"
        android:paddingEnd="3dp"
        android:elevation="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:hint="@string/nickname"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions"/>

                <AutoCompleteTextView
                    android:id="@+id/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="200"
                    android:hint="@string/message"
                    android:imeOptions="actionSend"
                    android:inputType="textShortMessage|textCapSentences|textAutoComplete|textAutoCorrect"/>

            </LinearLayout>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/send"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/send_icon"
            android:enabled="false"
            fab:fab_shadow="false"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/green_light"
            fab:fab_colorRipple="@android:color/holo_green_light"
            android:layout_margin="6dp"/>

    </LinearLayout>
</LinearLayout>
