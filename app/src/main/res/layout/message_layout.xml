<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        fresco:placeholderImage="@drawable/placeholder_icon"
        fresco:roundAsCircle="true"
        fresco:roundingBorderWidth="2dp"
        fresco:roundingBorderColor="@android:color/white"
        fresco:roundWithOverlayColor="@color/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Lorem ipsum dolor si amet"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/avatar"
        android:layout_below="@+id/author"
        android:autoLink="all"
        android:enabled="true"
        android:linksClickable="true"
        android:maxLines="4"
        android:textColorLink="@color/green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Author"
        android:id="@+id/author"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/time"
        android:layout_toEndOf="@+id/avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27/03/2015 10:04"
        android:id="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>